<html>
    <head><title>  </title>
        <link rel="stylesheet" href="/css/project_details.css">
    </head>
    <body>
   <!-- ==================================================================Main================================================ -->
        <div class="main">
            <!-- ====================================================Display Project Details================================== -->
        <div id="project-display-id">
            <h3><%=details.name%></h3>
                <p><%=details.description%></p>
                <h4>------------<%=details.author%></h4>
                <div class="issu-display-div-c">
                    <ul>
                    <%for(let m of details.PP){%>
                        <li>
                            <p><%=m.title%></p>
                            <p><%=m.description%></p>
                            <p><%=m.labels%></p>
                            <p>------by <%=m.author%></p>
                        </li>
                        <%}%>
                    </ul>
                </div>
        </div>

<!-- ===============================================Form to create an Issue============================================================ -->
        <div class="issue-c" id="issue-i">
            <div class="dropdown">
                <button class="dropbtn">Raise an Issue</button>
                <div class="dropdown-content">
                    <form action="/generates/issues" method="POST">
                  <input type="text" name="title" placeholder="name.........." required><br>
                  <input type="hidden" name="project" value="<%= details._id%>">
                  <textarea  cols="30" rows="3" name="description" placeholder="Drop an issue here........" required></textarea>
                  <!-- <input type="text" name="labels" placeholder="labels" required> -->
                  <select name="labels" multiple>
                    <option value="Java">Java</option>
                    <option value="JavaScript">JavaScript</option>
                    <option value="HTML">HTML</option>
                    <option value="CSS">CSS</option>
                    <option value="Python">Python</option>
                    <option value="NodeJs">NodeJs</option>
                    <option value="ReactJs">ReactJs</option>
                    <option value="Express">Express</option>
                    <option value="Ruby">Ruby</option>
                    <option value="C++">C++</option>
                    <option value="PHP">PHP</option>
                    <option value="DSA">DSA</option>
                    <option value=".Net">.Net</option>
                    <option value="Database">Database</option>
                    <option value="MongoDB">MongoDB</option>
                    <option value="SQL">SQL</option>
                    <option value="Frontend">Front-End</option>
                    <option value="Backend">Back-End</option>
                    <option value="Front-End">Front-End</option>
                    <option value="EJS">EJS</option>
                    <option value="ManualAuthentication">ManualAuthentication</option>
                    <option value="Authentication">Authentication</option>
                  </select>
                  <input type="text" name="author" place="Author......"required> 
                  <button>Create an issue</button>
                </form>
                </div>
              </div>
        </div>
    </div>
    
    </body>
</html>